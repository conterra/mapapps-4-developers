{
    "name": "sample_camera",
    "version": "1.0.0-SNAPSHOT",
    "dependencies": {
        "esri": "^4.26.0",
        "apprt-vue": "^4.15.0",
        "apprt-vuetify": "^4.15.0",
        "apprt-binding": "^4.15.0"
    },
    "main": "",
    "layout-widgets": [
        {
            "widgetRole": "camera",
            "template": "seasons",
            "window": {
                "autofocus": false,
                "dockTool": "cameraToggleTool",
                "minimizeOnClose": true,
                "marginBox": {
                    "w": 355,
                    "h": 455,
                    "b": 100,
                    "l": 50
                },
				"minSize": {
					"h": 330
				}
            }
        }
    ],
    "components": [
        {
            "name": "CameraControlFactory",
            "provides": ["dijit.Widget","sample_camera.Widget"],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "camera"
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "CameraToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "cameraToggleTool",
                "title": "${ui.windowTitle}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-camera",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                },
                "activateHandler": "enableBinding",
                "deactivateHandler": "disableBinding"
            },
            "references":[{
                "name": "handlerScope",
                "providing": "sample_camera.Widget"
            }]
        }
    ]
}
